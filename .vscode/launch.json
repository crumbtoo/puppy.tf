    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\main.ts",
            "runtimeArgs": [

                "--loader",
                "ts-node/esm",
                "--experimental-specifier-resolution=node"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
        //    "preLaunchTask": "npm: build"
        }
    ]
}