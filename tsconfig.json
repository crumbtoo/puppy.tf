{ "compilerOptions":
    { "moduleResolution": "node"       /* required by discordx */
    , "module": "ESNext"               /* required by discordx */
    , "target": "ESNext"               /* required by discordx */
    // , "module": "CommonJS"
    // , "target": "ES2020"
    , "sourceMap": false
    , "lib": []
    , "outDir": "./dist/"

    , "emitDecoratorMetadata": true    /* required by discordx */
    , "experimentalDecorators": true   /* required by discordx */
    , "importHelpers": true            /* required by discordx */
    , "esModuleInterop": true          /* required by discordx */

    /* type checking */
    , "strict": true
    , "noImplicitAny": true
    , "noImplicitReturns": true
    , "noImplicitThis": true
    , "noPropertyAccessFromIndexSignature": true
    , "strictFunctionTypes": true
    , "strictNullChecks": true
    , "strictPropertyInitialization": true
    }
, "include":
    [ "src/**/*.ts"
    ]
, "exclude":
    [ "node_modules"
    , "dist"
    ]
, "ts-node":
    { "esm": true
    , "experimentalSpecifierResolution": "node"
    }
}
