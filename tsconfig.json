{
	"files": [
		"src/main.ts"
	],

    "compilerOptions": {
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "es2015",
        "sourceMap": true,
        "watch": true,
        "outDir": "./build/",

        /* type checking */
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noPropertyAccessFromIndexSignature": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    }
}
